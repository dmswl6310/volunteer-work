generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  contact     String?
  role        String   @default("user") // "admin" | "user"
  isApproved  Boolean  @default(false)
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  
  posts       Post[]
  applications Application[]
  reviews     Review[]
  postScraps  PostScrap[]
  reviewLikes ReviewLike[]

  @@map("users")
}

model Post {
  id          String   @id @default(uuid())
  authorId    String
  title       String
  content     String?
  imageUrl    String?
  category    String?
  maxParticipants Int @default(10)
  currentParticipants Int @default(0)
  isUrgent    Boolean @default(false)
  views       Int @default(0)
  scraps      Int @default(0)
  isRecruiting Boolean @default(true)
  createdAt   DateTime @default(now())

  author      User @relation(fields: [authorId], references: [id])
  applications Application[]
  reviews     Review[]
  scrappedBy  PostScrap[]

  @@map("posts")
}

model Application {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  status    String   @default("pending") // pending, approved, rejected, confirmed, cancelled
  createdAt DateTime @default(now())

  post      Post @relation(fields: [postId], references: [id])
  user      User @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
  @@map("applications")
}

model Review {
  id        String   @id @default(uuid())
  postId    String?
  authorId  String
  content   String
  likes     Int      @default(0)
  createdAt DateTime @default(now())

  post      Post? @relation(fields: [postId], references: [id])
  author    User  @relation(fields: [authorId], references: [id])
  likedBy   ReviewLike[]

  @@map("reviews")
}

model PostScrap {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())

  post      Post @relation(fields: [postId], references: [id])
  user      User @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
  @@map("post_scraps")
}

model ReviewLike {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  createdAt DateTime @default(now())

  review    Review @relation(fields: [reviewId], references: [id])
  user      User   @relation(fields: [userId], references: [id])

  @@unique([reviewId, userId])
  @@map("review_likes")
}
