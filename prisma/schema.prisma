generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  username    String   @unique
  name        String
  contact     String
  address     String
  job         String
  role        String   @default("user") // "admin" | "user"
  isApproved  Boolean  @default(false) @map("is_approved")
  points      Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  
  posts       Post[]
  applications Application[]
  reviews     Review[]
  postScraps  PostScrap[]
  reviewLikes ReviewLike[]

  @@map("users")
}

model Post {
  id          String   @id @default(uuid())
  authorId    String   @map("author_id")
  title       String
  content     String?
  imageUrl    String?   @map("image_url")
  category    String?
  maxParticipants Int @default(10) @map("max_participants")
  currentParticipants Int @default(0) @map("current_participants")
  isUrgent    Boolean @default(false) @map("is_urgent")
  dueDate     DateTime? @map("due_date")
  views       Int @default(0)
  scraps      Int @default(0)
  isRecruiting Boolean @default(true) @map("is_recruiting")
  createdAt   DateTime @default(now()) @map("created_at")

  author      User @relation(fields: [authorId], references: [id])
  applications Application[]
  reviews     Review[]
  scrappedBy  PostScrap[]

  @@map("posts")
}

model Application {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  status    String   @default("pending") // pending, approved, rejected, confirmed, cancelled
  createdAt DateTime @default(now()) @map("created_at")

  post      Post @relation(fields: [postId], references: [id])
  user      User @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
  @@map("applications")
}

model Review {
  id        String   @id @default(uuid())
  postId    String?  @map("post_id")
  authorId  String   @map("author_id")
  content   String
  likes     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  post      Post? @relation(fields: [postId], references: [id])
  author    User  @relation(fields: [authorId], references: [id])
  likedBy   ReviewLike[]

  @@map("reviews")
}

model PostScrap {
  id        String   @id @default(uuid())
  postId    String   @map("post_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  post      Post @relation(fields: [postId], references: [id])
  user      User @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
  @@map("post_scraps")
}

model ReviewLike {
  id        String   @id @default(uuid())
  reviewId  String   @map("review_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  review    Review @relation(fields: [reviewId], references: [id])
  user      User   @relation(fields: [userId], references: [id])

  @@unique([reviewId, userId])
  @@map("review_likes")
}
